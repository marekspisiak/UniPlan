generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String   @unique
  password        String
  lastVerifiedAt  DateTime?
  createdAt       DateTime @default(now())
  verificationTokens EmailVerificationToken[]
  events          Event[]  @relation("UserEvents")       // hlavný organizátor
  moderatedEvents Event[]  @relation("EventModerators")  // m:n cez pivot tabuľku
}


model EmailVerificationToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
}

model Event {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  time        String
  location    String
  capacity    Int?
  categories  Category[] @relation("EventCategories")
  organizer   User       @relation("UserEvents", fields: [organizerId], references: [id])
  organizerId Int
  moderators  User[]     @relation("EventModerators")
  createdAt   DateTime   @default(now())
}




model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  label     String
  icon      String?
  events    Event[]  @relation("EventCategories")
}


